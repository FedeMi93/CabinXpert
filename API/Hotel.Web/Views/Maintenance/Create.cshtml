@model Obligatorio_1.Entidades.Maintenance

@{
    ViewData["Title"] = "Create";
}

<h1>Maintenance</h1>
<div>
    <h4>Cabin</h4>
    <hr />  
      
    <dl class="row">
        <dt class="col-sm-2">
            Cabin Type:
        </dt>
        <dd class="col-sm-10">
            @ViewBag.CabinType
        </dd>
        <dt class="col-sm-2">
            Cabin Room:
        </dt>
        <dd class="col-sm-10">
            @ViewBag.CabinRoom
        </dd>
        <dt class="col-sm-2">
            Cabin Name:
        </dt>
        <dd class="col-sm-10">
            @ViewBag.CabinName
        </dd>
        <dt class="col-sm-2">
            Cabin Description:
        </dt>
        <dd class="col-sm-10">
            @ViewBag.CabinDescription
        </dd>
        <dt class="col-sm-2">
            Capacity:
        </dt>
        <dd class="col-sm-10">
            @ViewBag.CabinCapacity
        </dd>
        <dt class="col-sm-2">
            Private Jacuzzi:
        </dt>
        <dd class="col-sm-10">
            @ViewBag.CabinJacuzzi
        </dd>
        <dt class="col-sm-2">
            Enable for reservation:
        </dt>
        <dd class="col-sm-10">
            @ViewBag.CabinEnable
        </dd>
    </dl>
</div>

<h4>Add Maintenance</h4>
<p class="text-primary">@ViewBag.CorrectMessage</p>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <input asp-for="Date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cost" class="control-label"></label>
                <input asp-for="Cost" class="form-control" />
                <span asp-validation-for="Cost" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NameOfWorker" class="control-label"></label>
                <input asp-for="NameOfWorker" class="form-control" />
                <span asp-validation-for="NameOfWorker" class="text-danger"></span>
            </div>
            <div class="form-group">
                
                <input asp-for="CabinId" value="@ViewBag.CabinId" type="hidden" class="form-control ">
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
        <span class="text-danger">@ViewBag.ExceptionMessage</span>
    </div>
</div>

<div>
    <a asp-action="Index" asp-route-CabinId="@ViewBag.CabinId" >Maintenance List</a>
    @Html.ActionLink("Back to cabin list", "Index", "Cabin")
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
